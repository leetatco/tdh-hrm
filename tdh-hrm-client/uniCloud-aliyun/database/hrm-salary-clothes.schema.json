{
	"bsonType": "object",
	"required": ["attendance_ym", "employee_id"],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID，系统自动生成"
		},
		"attendance_ym": {
			"title": "考勤年月",
			"bsonType": "date",
			"description": "考勤年月"
		},
		"employee_id": {
			"title": "员工工号",
			"bsonType": "string",
			"description": "员工工号唯一标识，不可修改，不允许重复",
			"foreignKey": "hrm-employees.employee_id",
			"trim": "both"
		},
		"clothes_cost": {
			"title": "工衣费用",
			"bsonType": "int",
			"description": "工衣费用"
		},
		"comment": {
			"title": "备注",
			"bsonType": "string",
			"description": "备注",
			"trim": "both"
		},
		"update_date": {
			"title": "更新时间",
			"bsonType": "timestamp",
			"description": "更新时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"update_id": {
			"title": "更新人",
			"bsonType": "string",
			"description": "更新人ID",
			"trim": "both",
			"foreignKey": "uni-id-users._id",
			"forceDefaultValue": {
				"$env": "uid"
			}
		}
	},
	"version": "0.0.1"
}