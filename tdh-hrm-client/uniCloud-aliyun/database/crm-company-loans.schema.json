{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "文档ID，系统自动生成"
		},
		"loan_introduction_type": {
			"bsonType": "string",
			"title": "贷款介绍类型",
			"description": "贷款介绍类型：公司贷款/实控人及配偶贷款/法人及配偶贷款/关联公司贷款介绍款",
