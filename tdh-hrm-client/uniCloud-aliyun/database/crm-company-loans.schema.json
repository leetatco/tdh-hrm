		},
		"company_id": {
			"bsonType": "string",
			"title": "关联企业ID",
			"description": "关联的企业记录ID"
		},
		"loan_bank": {
			"bsonType": "string",
			"title": "贷款银行",
			"description": "贷款银行名称"
		},
		"loan_type": {
			"bsonType": "string",
			"title": "信用/抵押",
			"description": "贷款类型：信用贷款或抵押贷款"
		},
		"loan_name": {
			"bsonType": "string",
			"title": "贷款名称",
			"description": "贷款产品名称"
		},
