		"pre_loan_period": {
			"bsonType": "string",
			"title": "预借时间段",
			"description": "预借贷款的时间段"
		},
		"loan_term": {
			"bsonType": "string",
			"title": "贷款期",
			"description": "贷款期限"
		},
		"actual_amount": {
			"bsonType": "number",
			"title": "实际发生额",
